<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SplashActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/recoleta"
                android:paddingLeft="@dimen/_11sdp"
                android:paddingTop="@dimen/_10sdp"
                android:text="Food Recipe"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="#25262d"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/recoleta"
                android:paddingLeft="@dimen/_11sdp"
                android:paddingTop="@dimen/_4sdp"
                android:text="Find some delicious recipe for cooking"
                android:textAlignment="center"
                android:textColor="#8025262D"
                android:textSize="@dimen/_12ssp" />

            <Button
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_1sdp"
                android:id="@+id/line1"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_11sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:paddingStart="@dimen/_11sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:background="@drawable/category2"
                />

            <Button
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_1sdp"
                android:id="@+id/line2"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginLeft="@dimen/_11sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:background="@drawable/category2"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Main Category"
                android:textSize="@dimen/_15ssp"
                android:id="@+id/MCategory"
                android:fontFamily="@font/gilroy_bold"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingStart="@dimen/_14sdp"
                android:layout_marginBottom="@dimen/_5sdp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_10sdp">

            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_main_category"
                tools:itemCount="1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_1ssp"
                android:orientation="horizontal"
                tools:listitem="@layout/item_rv_main_category"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category name"
                android:textSize="@dimen/_15ssp"
                android:id="@+id/tvCategory"
                android:fontFamily="@font/gilroy_bold"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_sub_category"
                tools:itemCount="1"
                android:layout_margin="10.00dp"
                android:orientation="horizontal"
                tools:listitem="@layout/item_rv_sub_category"/>

        </LinearLayout>>

    </ScrollView>




</RelativeLayout>